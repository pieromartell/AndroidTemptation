<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtdniPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="txtdniPerson"
            android:textColor="#3B7EC6" />

        <TextView
            android:id="@+id/txtnamelPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="txtnamelPerson"
            android:textColor="#3B7EC6" />

        <TextView
            android:id="@+id/txtRolPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="txtRolPerson"
            android:textColor="#3B7EC6" />

        <TextView
            android:id="@+id/txtUserPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="txtUserPerson"
            android:textColor="#3B7EC6" />

        <TextView
            android:id="@+id/txtEstadoPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="txtEstadoPerson"
            android:textColor="#3B7EC6" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>